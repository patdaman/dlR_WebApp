@model Rapid_e4473.Models._14b_Country_Citizenship
@{
    ViewBag.Title = "Foreign Citizenship";
}

<h2>Citizenship</h2>

@using (Html.BeginForm("_14b_Country_Citizenship", "e4473", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true)

        <p>
            What is your country of citizenship? 
        </p>
        <p>
            (List more than one, if applicable.)
        </p>

        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.FOREIGNCITIZENSHIP, new { htmlAttributes = new { @class = "form-control" } })
                <br />
                @Html.ValidationMessageFor(model => model.FOREIGNCITIZENSHIP, "", new { @checked = false, @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" name="BtnPrevious" value="Previous" class="btn btn-default" />
                <input type="submit" name="BtnNext" value="Next" class="btn btn-default" />
            </div>
        </div>
        <ol class="progtrckr" data-progtrckr-steps="4">
            <li class="progtrckr-done">Personal</li>
            <!--
        -->
            <li class="progtrckr-done">Details</li>
            <!--
        -->
            <li class="progtrckr-done">Eligible</li>
            <!--
        -->
            <li class="progtrckr-todo">Residence</li>
        </ol>
        <br />
        <div class="progress progress-striped active" style="max-width:98%">
            <div class="progress-bar" role="progressbar"
                 aria-valuenow="95" aria-valuemin=" 0" aria-valuemax="100" style="min-width:1px;width:95%">
            </div>
        </div>
    </div>
}