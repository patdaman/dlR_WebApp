@model Rapid_e4473.Models._9_UPIN
@{
    ViewBag.Title = "UPIN";
}

<h2>Unique Personal Identification Number (UPIN)</h2>
@using (Html.BeginForm("_9_UPIN", "e4473", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.UPIN, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.UPIN, new { htmlAttributes = new { @class = "form-control" } })
                <br />
                @Html.ValidationMessageFor(model => model.UPIN, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="control-label col-md-2">
                <div class="flip">
                    <span>Instructions</span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <h5>UPIN is optional, click NEXT to skip.</h5>
                <input type="submit" name="BtnPrevious" value="Previous" class="btn btn-default" />
                <input type="submit" name="BtnNext" value="Next" class="btn btn-default" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <div class="panel">
                    <p>
                        &nbsp;
                        For purchasers approved to have information maintained about them in the FBI
                        NICS Voluntary Appeal File, NICS will provide them with a Unique Personal
                        Identification Number, which the buyer should record in question 9. The
                        licensee may be asked to provide the UPIN to NICS or the State.
                    </p>
                </div>
            </div>
        </div>
        <ol class="progtrckr" data-progtrckr-steps="4">
            <li class="progtrckr-done">Personal</li>
            <!--
        -->
            <li class="progtrckr-todo">Details</li>
            <!--
        -->
            <li class="progtrckr-todo">Eligible</li>
            <!--
        -->
            <li class="progtrckr-todo">Residence</li>
        </ol>
        <br />
        <div class="progress progress-striped active" style="max-width:98%">
            <div class="progress-bar" role="progressbar"
                 aria-valuenow="41" aria-valuemin=" 0" aria-valuemax="100" style="min-width:1px;width:41%">
            </div>
        </div>
    </div>
}