@model Rapid_e4473.Models._10b_Race
@{
    ViewBag.Title = "Race";
}

<h2>Race</h2>

@using (Html.BeginForm("_10b_Race", "e4473", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.RACE, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.CheckBoxFor(model => model.RACE_A, new { htmlAttributes = new { @class = "form-control" } }) American Indian or Alaska Native 
                <br />
                @Html.CheckBoxFor(model => model.RACE_N, new { htmlAttributes = new { @class = "form-control" } }) Asian 
                <br />
                @Html.CheckBoxFor(model => model.RACE_B, new { htmlAttributes = new { @class = "form-control" } }) Black or African American 
                <br />
                @Html.CheckBoxFor(model => model.RACE_H, new { htmlAttributes = new { @class = "form-control" } }) Native Hawaiin or Other Pacific Islander 
                <br />
                @Html.CheckBoxFor(model => model.RACE_W, new { htmlAttributes = new { @class = "form-control" } }) White 
                <br />
                @if (ViewData["Validation"] != null)
                {
                    <div class="text-danger">
                        <span>
                            @Html.ViewData["Validation"] 
                        </span>
                    </div>
                }
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" name="BtnPrevious" value="Previous" class="btn btn-default" />
                <input type="submit" name="BtnNext" value="Next" class="btn btn-default" />
            </div>
        </div>
        <ol class="progtrckr" data-progtrckr-steps="4">
            <li class="progtrckr-done">Personal</li>
            <!--
        -->
            <li class="progtrckr-todo">Details</li>
            <!--
        -->
            <li class="progtrckr-todo">Eligible</li>
            <!--
        -->
            <li class="progtrckr-todo">Residence</li>
        </ol>
        <br />
        <div class="progress progress-striped active" style="max-width:98%">
            <div class="progress-bar" role="progressbar"
                 aria-valuenow="47" aria-valuemin=" 0" aria-valuemax="100" style="min-width:1px;width:47%">
            </div>
        </div>
    </div>
}