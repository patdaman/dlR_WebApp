@model Rapid_e4473.Models._3b_Place_of_Birth
@using Rapid_e4473.HelperClasses;
@{
    ViewBag.Title = "Place of Birth";
}


<h2>Place of Birth</h2>

@using (Html.BeginForm("_3b_Place_of_Birth", "e4473", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.PLACE_OF_BIRTH_CITY, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.PLACE_OF_BIRTH_CITY, new { htmlAttributes = new { @class = "form-control" } })
                <br />
                @Html.ValidationMessageFor(model => model.PLACE_OF_BIRTH_CITY, "", new { @checked = false, @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PLACE_OF_BIRTH_STATE, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.PLACE_OF_BIRTH_STATE, new SelectList(ListVals.birth_states, "PLACE_OF_BIRTH_STATE", "PLACE_OF_BIRTH_STATE"), new { htmlAttributes = new { @class = "form-control" } })
                <br />
                @Html.ValidationMessageFor(model => model.PLACE_OF_BIRTH_STATE, "", new { @checked = false, @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" name="BtnPrevious" value="Previous" class="btn btn-default" />
                <input type="submit" name="BtnNext" value="Next" class="btn btn-default" />
            </div>
        </div>
        <ol class="progtrckr" data-progtrckr-steps="4">
            <li class="progtrckr-todo">Personal</li>
            <!--
        -->
            <li class="progtrckr-todo">Details</li>
            <!--
        -->
            <li class="progtrckr-todo">Eligible</li>
            <!--
        -->
            <li class="progtrckr-todo">Residence</li>
        </ol>
        <br />
        <div class="progress progress-striped active" style="max-width:98%">
            <div class="progress-bar" role="progressbar"
                 aria-valuenow="20" aria-valuemin=" 0" aria-valuemax="100" style="min-width:1px;width:20%">
            </div>
        </div>
    </div>
}


